#include <stdint.h>

#include "stm32f446rxx.h"

#define DS3231_ADDR  0x68

void I2C1_Init(void)
{
    GPIOB_CLK_EN();
    I2C1_CLK_EN();

    // PB6 = SCL, PB7 = SDA (AF4)
    GPIOB->MODER &= ~(0xF << 12);
    GPIOB->MODER |=  (0xA << 12);

    GPIOB->AFRL |= (4 << 24) | (4 << 28);

    I2C1->CR2 = 16;        // APB1 = 16 MHz
    I2C1->CCR = 80;       // Standard mode
    I2C1->TRISE = 17;

    I2C1->CR1 |= (1 << 0); // PE
}
